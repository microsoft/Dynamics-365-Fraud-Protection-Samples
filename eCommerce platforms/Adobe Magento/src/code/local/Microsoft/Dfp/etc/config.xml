<config>
  <modules>
    <Microsoft_Dfp>
      <version>0.1.0</version>
    </Microsoft_Dfp>
  </modules>
  <frontend>
    <routers>
      <dfp>
        <use>standard</use>
        <args>
          <module>Microsoft_Dfp</module>
          <frontName>dfp</frontName>
        </args>
      </dfp>
    </routers>
    <layout>
      <updates>
        <dfp>
          <file>dfp.xml</file>
        </dfp>
      </updates>
    </layout>
  </frontend>
  <default>
    <dfp>
      <tokenprovider>
        <clientsecret backend_model="adminhtml/system_config_backend_encrypted" />
      </tokenprovider>
    </dfp>
  </default>
  <global>
    <rewrite>
      <Microsoft_dfp_checkout_onepagecontroller>
        <from><![CDATA[#^/checkout/onepage/#]]></from>
        <to>/dfp/checkout_onepage/</to>
      </Microsoft_dfp_checkout_onepagecontroller>
      <Microsoft_dfp_customer_accountcontroller>
        <from><![CDATA[#^/customer/account/#]]></from>
        <to>/dfp/customer_account/</to>
      </Microsoft_dfp_customer_accountcontroller>
    </rewrite>
    <blocks>
      <dfp>
        <class>Microsoft_Dfp_Block</class>
      </dfp>
    </blocks>
    <models>
      <dfp>
        <class>Microsoft_Dfp_Model</class>
      </dfp>
    </models>
    <helpers>
      <dfp>
        <class>Microsoft_Dfp_Helper</class>
      </dfp>
    </helpers>
    <events>
      <customer_address_save_after>
        <observers>
          <dfp>
            <class>dfp/observer</class>
            <method>customerEventAfterAddressSave</method>
          </dfp>
        </observers>
      </customer_address_save_after>
      <sales_order_save_after>
        <observers>
          <dfp>
            <class>dfp/observer</class>
            <method>salesEventOrderAfterSave</method>
          </dfp>
        </observers>
      </sales_order_save_after>
    </events>
  </global>
</config>
