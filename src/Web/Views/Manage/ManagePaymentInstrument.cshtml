@using Contoso.FraudProtection.Web.Helpers
@model ManagePaymentInstrumentViewModel
@{
    ViewData["Title"] = "Manage Default Payment Method";
    ViewData.AddActivePage(ManageNavPages.ManagePaymentInstrument);
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form asp-controller="Manage" method="post" class="form-horizontal" onsubmit="setUpClientDetails()">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <section>
            <div class="col-md-6">
                <h4>Default Payment Information</h4>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="cardType">Card Type</label>
                        @Html.DropDownListFor(model => model.CardType, HelperFunctions.CardTypeList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="cardNumber">Card Number</label>
                        @Html.TextBoxFor(model => model.CardNumber, new { @class = "form-control", @placeholder = "XXXX-XXXX-XXXX-XXXX" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label for="cvv">CVV</label>
                        @Html.TextBoxFor(model => model.CVV, new { @class = "form-control", @placeholder = "XXX" })
                    </div>
                    <div class="col-md-8">
                        <div>
                            <label for="expirationMonth">Expiration Date</label>
                        </div>
                        <div class="col-md-6" style="width: 45%; padding-left: 0;">
                            @Html.DropDownListFor(model => model.ExpirationMonth, HelperFunctions.PIMonthList, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6" style="width: 45%; padding-left: 0;">
                            @Html.DropDownListFor(model => model.ExpirationYear, HelperFunctions.PIYearList, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="col-md-6">
                <h4>Default Billing Information</h4>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="cardName">Card Holder Name</label>
                        @Html.TextBoxFor(model => model.CardName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="address1">Address Line 1</label>
                        @Html.TextBoxFor(model => model.Address1, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="address2">Address Line 2</label>
                        @Html.TextBoxFor(model => model.Address2, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="city">City</label>
                        @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="state">State</label>
                        @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="zipCode">Zip Code</label>
                        @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="countryRegion">Country/Region</label>
                        @Html.DropDownListFor(model => model.CountryRegion, HelperFunctions.CountryRegionList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </section>
        <div class="row">
            <div class="esh-catalog-items row">
                <section class="esh-basket-item col-xs-push-8 col-xs-4">
                    <input type="submit" asp-action="ManagePaymentInstrument"
                            class="btn esh-basket-checkout"
                            value="[ Update ]" name="action" />
                </section>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
